<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eq.EQSuperPlayer">

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 获取WiFi列表的权限设置 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取图片列表的权限设置 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- !在SD卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />
    <!-- !向SD卡写入数据的权限 -->
    <uses-permission android:name="androd.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- !读取数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ProgramActivity" />
        <activity android:name=".activity.TextActivity" />
        <activity android:name=".activity.ImageActivity" />
        <activity android:name=".activity.VedioActivity" />
        <activity
            android:name=".activity.SelectPicPopupWindow"
            android:theme="@style/MyDialogStyleBottom" />
        <activity android:name=".activity.WelcomeActivity" />
        <activity android:name=".activity.TimeActivity" />
        <activity android:name=".SlidingMenuActivity.OpenActivity" />
        <activity android:name=".SlidingMenuActivity.BrightnessActivity" />
        <activity android:name=".SlidingMenuActivity.CorrectionActivity" />
        <activity android:name=".SlidingMenuActivity.LanguageActivity" />
        <activity android:name=".SlidingMenuActivity.WIFIActivity" />
        <activity android:name=".SlidingMenuActivity.AboutActivity"></activity>
    </application>

