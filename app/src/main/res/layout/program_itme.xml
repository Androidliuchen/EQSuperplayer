<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingRight="-90dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/tv_num_bg"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_alignTop="@+id/tvDelete"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="设备"
        android:gravity="center|top"
        android:layout_toRightOf="@+id/tv_num"
        android:layout_alignBaseline="@+id/tv_num" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="123"
        android:textStyle="bold"
        android:gravity="center|left|top"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginRight="30dp"
        android:layout_alignBaseline="@+id/tv_num"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignTop="@+id/tv_name"
        android:layout_toStartOf="@+id/tvHeight" />


    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="40*20"
        android:gravity="center|left|top"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv_num"
        android:layout_toStartOf="@+id/tvDelete"
        android:layout_alignTop="@+id/tv_ip" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginEnd="29dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>